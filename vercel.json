{
    "version": 2,
    "builds": [
        { "src": "*.html", "use": "@vercel/static" },
        { "src": "*.css", "use": "@vercel/static" },
        { "src": "*.js", "use": "@vercel/static" },
        { "src": "images/*", "use": "@vercel/static" },
        { "src": "src/*", "use": "@vercel/static" }
    ],
    "rewrites": [
        { "source": "/(.*)", "destination": "/$1" }
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "github": {
        "enabled": true,
        "silent": false,
        "autoAlias": true
    }
} 